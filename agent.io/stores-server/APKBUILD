pkgname=stores-server
pkgver=0.1.1
pkgrel=0
pkgdesc="The Boba Dojo Stores API"
url="https://github.com/bobadojo/stores-server"
arch="all"
license="Apache 2.0"
makedepends="go"
options="net"
source="$pkgname-$pkgver.tar.gz::https://github.com/bobadojo/$pkgname/archive/v$pkgver.tar.gz"

build() {
	CGO_ENABLED=0 go build -o stores-server ./cmd/stores-server
}

check() {
       go test ./...
}

package() {
	mkdir -p $pkgdir/usr/bin
	install -m 755 --target-directory "$pkgdir/usr/bin" stores-server
}

